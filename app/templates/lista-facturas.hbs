{{#link-to 'nueva-factura' type='button'}} Crear factura{{/link-to}}
<hr>
<table class="table table-hover table-sm table-bordered table-danger">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Serie</th>
      <th scope="col">Folio</th>
      <th scope="col">Fecha</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |factura|}}
    <td>{{factura.serie}}</td>
    <td>{{factura.folio}}</td>
    <td>{{factura.fecha}}</td>
    <td>{{TotalFactura}}</td>
    {{/each}}
  </tbody>
</table>
